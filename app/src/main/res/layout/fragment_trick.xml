<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.TrickFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bird Watching Tips"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />


        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/pisang_tanduk"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text" />


        <TextView
            android:id="@+id/tips_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tips"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bird_image" />


        <LinearLayout
            android:id="@+id/tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tips_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tip1_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Gear Up for Birding"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip1_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Always bring binoculars for a closer look."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip2_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2. Decode Bird Language"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn to identify common bird behaviors and sounds."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip3_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3. Use a Field Guide"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip3_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carry a field guide to help identify birds."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip4_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4. Learn Bird Calls"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip4_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Familiarize yourself with common bird calls."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip5_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="5. Be Patient"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bird watching requires patience and quiet observation."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip6_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6. Dress Appropriately"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip6_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wear suitable clothing for the environment and weather."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip7_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="7. Use Technology"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip7_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilize birding apps and online resources for assistance."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip8_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="8. Observe Flight Patterns"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip8_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay attention to how birds fly and move."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip9_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="9. Keep Notes"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip9_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document your observations and sightings."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tip10_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10. Join a Birding Group"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip10_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect with local bird watchers for tips and outings."
                android:textSize="16sp" />
            <!-- Add more tips following the same pattern -->

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>